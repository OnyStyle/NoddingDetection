<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@color/lightBlue"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/test"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:text="Lets start with taking 2 pictures! Go ahead and press the 'Take Picture' button! Make sure your eyes are fully visible!"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />
    <TextView
        android:id="@+id/BadText"
        android:layout_width="wrap_content"
        android:layout_height="920dp"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            ></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/PictureFace1"
            android:layout_width="168dp"
            android:layout_height="315dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="31dp"></ImageView>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="80dp"></ImageView>

            <ImageView
                android:id="@+id/PictureFace2"
                android:layout_width="168dp"
                android:layout_height="315dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-43dp" />
        </LinearLayout>


    </LinearLayout>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <Button
        android:id="@+id/Pictures"
        android:layout_width="211dp"
        android:layout_height="122dp"
        android:text="Take Pictures!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937"></Button>







</androidx.constraintlayout.widget.ConstraintLayout>